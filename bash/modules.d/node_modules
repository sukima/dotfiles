# Adds node bin directories to PATH

# Adds the global node path (npm install with -g)
NODE_PATH=$(npm bin -g 2> /dev/null)
if [[ -n "$NODE_PATH" ]]; then
  prependToPath "${NODE_PATH}"
fi

# Adds the current directory node path (npm install without -g)
# Used to allow local commands to work in a project directory
prependToPath "./node_modules/.bin"
