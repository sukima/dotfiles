# Add mac commandline tools to path (devtools, aliases)
if [[ -d /Developer/Tools ]]; then
    addToPath /Developer/Tools
elif [[ -d /Applications/Xcode.app/Contents/Developer/Tools ]]; then
    addToPath /Applications/Xcode.app/Contents/Developer/Tools
fi

# Port scanner hidden in Network Utility.app
alias stroke='"/Applications/Utilities/Network Utility.app/Contents/Resources/stroke"'

